/* pages/login/login.wxss */
.container {
  position: absolute;
  width: 35%;
  height: 20%;
  left: 30%;
  top: 10%;
}
.container image {
  width: 100%;
  height: 100%;
}
.login_box{
  width: 90%;
  position: absolute;
  top: 25%;
  left: 5%;
}
.section{
  width: 100%;
  border-bottom: 4rpx solid #d4d4d4;
  margin-top: 40rpx;
  position: relative;
}
.section input{
  height: 100rpx;
  color: #bebebe;
  box-sizing: border-box;
  padding-left: 80rpx;
  font-size: 36rpx;
}
.section image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  left: 10rpx;
}
.color{
  color: #bebebe;
}
checkbox-group{
  display: flex;
  justify-content:flex-end;
  margin-top: 30rpx;
  color: #bebebe;
  box-sizing: border-box;
  padding-right: 20rpx;
}
.login{
  margin-top: 100rpx;
}
.register{
  margin-top: 50rpx;
}